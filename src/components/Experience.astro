---
import Section from "@layouts/Section.astro";
---

<article>
  <div class="experience-content">
    <h3>Experience</h3>
    <h2>More than 25 years of experience</h2>
    <p>3000+ our clients are insured around the World</p>
  </div>
  <div class="stats">
    <div class="stat" style="--percent: 85"></div>
    <h4>Consistency</h4>
    <div class="stat" style="--percent: 95"></div>
    <h4>Improvement</h4>
    <div class="stat" style="--percent: 90"></div>
    <h4>Branching</h4>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-column: full-start / full-end;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    background-color: var(--accent-color);
    /* padding-top: var(--header-margin); */
    color: var(--secondary-color);
    padding-top: 5rem;
    padding-bottom: 5rem;
    padding-left: var(--padding-luft);
    padding-right: var(--padding-luft);

    h3 {
      font-family: var(--text-font);
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 147.5%; /* 23.6px */
      letter-spacing: 2.32px;
      text-transform: uppercase;
    }

    h2 {
      font-family: var(--heading-font);
      font-size: 45px;
      font-style: normal;
      font-weight: 700;
      line-height: 116%; /* 52.2px */
    }

    p {
      font-family: var(--text-font);
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 147.5%; /* 26.55px */
    }
  }

  .experience-content {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(3, 150px); /* samme bredde som .stat */
    grid-template-rows: auto auto; /* 1: cirkler, 2: labels */
    gap: 0 48px; /* vandret afstand mellem kolonner */
    align-items: start;
    justify-content: space-between; /* stræk hele rækken indenfor containeren */
    width: min(600px, 100% - 1rem);
  }

  /* Placer cirklerne i øverste række */
  .stats .stat {
    grid-row: 1;
    justify-self: center; /* centrer i kolonnen */
  }

  .stats h4 {
    grid-row: 2;
    align-self: start;
    justify-self: center; /* centrer under cirklen */
    margin-top: 12px;
    font-family: var(--text-font);
    font-size: 16px;
    font-weight: 600;
    color: var(--secondary-color); /* så de matcher teksten */
  }

  .stat {
    container: stat / inline-size;
    --actualPercent: calc(var(--percent) * 1%); /* 25% over 75% */
    --border-width: 5px;
    aspect-ratio: 1;
    width: 150px;
    border-radius: calc(infinity * 1px);
    border: var(--border-width) solid transparent;
    background:
      conic-gradient(#fbc336 0 0) padding-box,
      conic-gradient(white var(--actualPercent), gainsboro 0) border-box;

    display: grid;
    counter-reset: c var(--percent);

    &::before,
    &::after {
      grid-area: 1 / 1;
    }

    &::after {
      content: counter(c, decimal-leading-zero) "%";
      place-self: center;
      font-size: 30cqw;
      font-variant-numeric: tabular-nums;
    }

    &::before {
      content: "";
      aspect-ratio: 1;
      border-radius: 99px;
      width: 20px;
      background: black;
      border: 4px solid white;
      offset-path: border-box;
      offset-distance: var(--actualPercent);
      offset-anchor: 50% calc(50% - var(--border-width) / 2); /* Fyri at fáa rundingin at vera heilt á stóra sirklinum */
    }
  }
</style>
