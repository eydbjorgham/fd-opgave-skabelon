---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <a href="#0">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" />

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      display: flex;
      width: 1920px;
      height: 615.626px;
      flex-shrink: 0;
    }

    .hero-content {
      background-color: black;

      h1,
      p,
      a {
        color: var(--primary-color);
      }

      h1 {
        font-family: var(--logo-font-primary);
        font-size: 50px;
        font-style: normal;
        font-weight: 700;
        line-height: 1.16; /* 58px */
      }

      p {
        font-family: var(--p-font-primary);
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 1.475; /* 23.6px */
      }
    }
  }
</style>
