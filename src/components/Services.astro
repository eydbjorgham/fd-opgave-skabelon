---
//@ts-nocheck
import servicesData from "@data/services.json";
import Section from "@layouts/Section.astro";
console.log(servicesData);
---

<ul class="cards">
  {
    servicesData.services.map((service) => (
      <li class="card">
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a class="card-cta" href="#0">
          {service.buttonText}
        </a>
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    /* Selve listen danner et 3-kolonne grid – ikke ét stort kort */
    .cards {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 20px;
      padding: 0;
      margin: 0;
      list-style: none;
      color: var(--primary-color);

      h2 {
        font-family: var(--logo-font-primary);
        font-size: 24px;
        font-style: normal;
        font-weight: 600;
        line-height: 116%; /* 29px */
      }

      p {
        font-family: var(--p-font-primary);
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 147.5%; /* 23.6px */
      }

      a {
        display: flex;
        padding: 16px 31px;
        align-items: center;
        gap: 10px;
        border-radius: 55px;
        background: var(--secondary-color);
        color: var(--primary-color);
        text-decoration: none;
      }
    }

    /* Hvert LI er et kort */
    .card {
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 36px;
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(16px);
      min-height: 200px; /* valgfrit */
    }

    .card-cta {
      display: inline-block;
      padding: 12px 18px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.16);
      text-decoration: none;
    }
  }
</style>
